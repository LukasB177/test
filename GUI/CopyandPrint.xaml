<Window x:Class="GUI.CopyandPrint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sicherungskopie und Drucken" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Width="300">
            <TextBlock Text="Sicherungskopie erstellen und drucken" FontSize="16" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>
            <Button Content="Sicherungskopie erstellen" Height="70" Margin="0,10,0,10" Click="CreateBackupButton_Click"/>
            <Button Content="Abbrechen" Height="70" Margin="0,10,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
